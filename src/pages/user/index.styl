// ================= 我的背景
.mybg-box
	height 260px
	image
		width 100%
.pic-wall-popup
	min-height 256px
	flex-direction column
.change-bg-textarea
	height 130px
	max-height 130px
	margin 10px auto
	width 95%
	border-radius 10px
	background-color #f7f8fa
	textarea
		height 115px
.btn-change-bg-box
	flex-center-height('')
	color #808080
.btn-change-bg
	margin-left 12px
	margin-right 5px
// ================= 我的
.my-info, .my-info-category
	border-radius 10px
	margin 10px auto
	width 92%
	box-shadow none
	flex-direction column
.my-info
	flex-center-height('')
	position relative
	top -55px
	background linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(247, 248, 250, 0.9) 75%)
	.my-info-avatar
		margin-top -40px
	.my-info-item
		display flex
		align-items center
		margin-bottom 5px
		.my-info-name
			font-size 18px
		.my-info-icon
			position relative
			top 5px
		.lv-text
			font-size 16px
		.my-info-addr
			background rgba(0, 0, 0, 0.1)
			padding 5px 10px
			border-radius 10px
		.my-info-follow
			position relative
		.my-info-follow:before, .my-info-follow:after
			content ''
			width 1px
			height 10px
			background-color #ddd
			position absolute
			top 9px
		.my-info-follow:before
			left -10px
		.my-info-follow:after
			right -13px
		&:last-child
			margin-top 10px
			.my-info-addr
				margin-right 5px
.my-info-category
	display flex
	margin-top -45px
	.my-info-category-title
		padding 10px 0 10px 10px
		color #808080
// ================= 其他
