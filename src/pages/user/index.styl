// ================= 更新我的信息
.update-info-popup
	flex-direction column
	align-items center
	.input-box
		display flex
		justify-content center
		width 100%
		margin-top 10px
		.input-label
			width 130px
			text-align right
		.input-box-content
			flex 1
		.avatar-input
			margin-left 15px
		input
			margin-left 10px
		.input-addr
			width 120px
			margin-left 10px
			display inline-block
	.avatar-wrapper
		margin-top 10px
		margin-bottom 10px
		border-radius 50%
		width 320px
		// height 320px
		padding 0
		display flex
		// row用justify
		// justify-content: center
		align-items center
		flex-direction column
		.my-avatar
			width 160px
			height 160px
			background none !important
			margin-bottom 20px
			.nut-icon
				font-size 100px
	.btn-submit
		width 75%
		margin-top 20px
// ================== 登录]
@keyframes rotate
	0%
		transform translate(-50%, 0) rotateZ(0deg)
	50%
		transform translate(-50%, -3%) rotateZ(180deg)
	100%
		transform translate(-50%, 0%) rotateZ(360deg)
.login-popup
	.nut-popup
		border-radius 50%
		opacity 0.85
		top 60%
		overflow hidden
	.nut-overlay
		backdrop-filter saturate(200%) blur(8px)
	.login-popup-content
		display flex
		flex-direction column
		align-items center
		justify-content center
		width 80px
		height 80px
		background -webkit-linear-gradient(315deg, #42d392 25%, #647eff)
		background-clip text
		-webkit-background-clip text
		-webkit-text-fill-color transparent
		font-weight 900
		position relative
		z-index 99
		.blog-name
			font-size 20px
	div
		width 160px
		height 160px
		background transparent
		display block
		position absolute
		bottom 0
		left 0
		transition transform 0.15s ease
		.wave
			display block
			width 100%
			min-height 80px
			position relative
			align-items center
			.before, .after
				content ''
				width 120%
				height 240%
				position absolute
				top 0%
				// left 0%
				background-color #eb6844
				animation-iteration-count infinite
				animation-timing-function linear
				left 45%
				animation-name rotate
				// -wbkit-animation-name rotate
			.before
				top 6px
				border-radius 36%
				animation-duration 10s
				-webkit-animation-duration 10s
			.after
				top 3px
				opacity 0.5
				border-radius 44%
				animation-duration 7s
